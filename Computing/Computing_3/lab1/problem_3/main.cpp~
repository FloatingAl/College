#include <iostream>

int factorial(int value);

int main()
{
  int number = 0; 
  int answer = 0;
  std::cout << " Enter a postive number " << std::endl;
  std::cin >> number;
  answer = factorial(number);
  std::cout << " The factorial of "<< number << " is "<< answer <<  std:endl

    return 0;

}
int factorial(int value);
{
  if(value == 0)
    return 1;
  return value * factorial(value-1);
}

